<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTextTopTile">

        <ImageView
            android:id="@+id/ivDetallePedido"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="16dp"
            android:src="@drawable/ic_logo"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/tvNombrePedidoP"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_toEndOf="@id/ivDetallePedido"
                   android:paddingTop="16dp"
                   android:paddingEnd="16dp"
                   android:maxLines="1"
                   android:hint="@string/TextPruebaitem"
                   android:textAppearance="?attr/textAppearanceSubtitle1"
                   android:textColor="?attr/colorOnSurface"
                   android:layout_toRightOf="@id/ivDetallePedido"
                   android:paddingRight="16dp" />

               <TextView
                   android:id="@+id/tvtCantidadPedido"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/tvNombrePedidoP"
                   android:layout_gravity="center_vertical"
                   android:layout_toEndOf="@id/ivDetallePedido"
                   android:hint="@string/TextPruebaitem"
                   android:paddingEnd="16dp"
                   android:maxLines="2"
                   android:textAppearance="?attr/textAppearanceBody2"
                   android:textColor="?attr/colorOnSurface"
                   android:layout_toRightOf="@id/ivDetallePedido"
                   android:paddingRight="16dp" />

               <TextView
                   android:id="@+id/tvtotalPedido"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/tvtCantidadPedido"
                   android:layout_gravity="center_vertical"
                   android:layout_toEndOf="@id/ivDetallePedido"
                   android:hint="@string/TextPruebaitem"
                   android:paddingEnd="16dp"
                   android:maxLines="2"
                   android:textAppearance="?attr/textAppearanceBody2"
                   android:textColor="?attr/colorOnSurface"
                   android:layout_toRightOf="@id/ivDetallePedido"
                   android:paddingRight="16dp" />

           </LinearLayout>

    </LinearLayout>



</RelativeLayout>