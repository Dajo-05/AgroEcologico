<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragmento.UnidadvAdminFragment">

         <TextView
             android:id="@+id/tvTituloU"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Crear Unidad de Venta"
             android:textAppearance="?attr/textAppearanceHeadline5"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="@dimen/cardimgAncho"
             />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/teNombreUnidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloU"
            android:hint="Nombre Unidad"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="@dimen/marginTextTopTile"
            android:layout_marginStart="@dimen/cardimgAncho"
            android:layout_marginEnd="@dimen/cardimgAncho"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teNombreUnidad1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/teAnbreviatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Abreviatura"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         app:layout_constraintTop_toBottomOf="@+id/teNombreUnidad"
            android:layout_marginTop="30dp"
            android:layout_marginStart="@dimen/cardimgAncho"
            android:layout_marginEnd="@dimen/cardimgAncho"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teAnbreviatura1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnCrearUnidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Unidad"
        app:layout_constraintTop_toBottomOf="@+id/teAnbreviatura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>


