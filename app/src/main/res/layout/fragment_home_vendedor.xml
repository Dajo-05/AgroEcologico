<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EditarPuesto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentosVendedor.HomeVendedorFragment">

    <TextView
        android:id="@+id/MiPV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mi Puesto de Venta"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:layout_margin="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/ImgTerreno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:3"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:src="@drawable/ic_add_box"
        android:layout_marginTop="@dimen/MargincardDefaul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MiPV" />


    <TextView
        android:id="@+id/Vendedored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Vendedores del Puesto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgTerreno" />

    <ImageView
        android:id="@+id/Vendedor1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/vend1"
        app:layout_constraintBottom_toTopOf="@+id/BtnModPV"
        app:layout_constraintEnd_toStartOf="@+id/Vendedor2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vendedored" />


    <ImageView
        android:id="@+id/Vendedor2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/BtnModPV"
        app:layout_constraintStart_toEndOf="@+id/Vendedor1"
        app:layout_constraintTop_toBottomOf="@+id/Vendedored"
        app:layout_constraintEnd_toStartOf="@+id/Vendedor3"
        android:src="@drawable/vend2"/>

    <ImageView
        android:id="@+id/Vendedor3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/vend3"
        app:layout_constraintBottom_toTopOf="@+id/BtnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Vendedor2"
        app:layout_constraintTop_toBottomOf="@+id/Vendedored" />

    <Button
        android:id="@+id/BtnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>