<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EditarPuesto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentosVendedor.HomeVendedorFragment">

    <TextView
        android:id="@+id/MiPV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Puesto de Venta"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:layout_margin="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NomPV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del puesto"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/MiPV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_nombrePV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre del puesto"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
       app:layout_constraintTop_toBottomOf="@+id/NomPV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/SelectImgTerreno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Seleccione Foto del terreno"
        app:layout_constraintBottom_toTopOf="@+id/ImgTerreno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombrePV" />

    <ImageView
        android:id="@+id/ImgTerreno"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:src="@drawable/ic_add_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SelectImgTerreno" />

    <TextView
        android:id="@+id/Vendedored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Vendedores del Puesto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgTerreno" />

    <ImageView
        android:id="@+id/Vendedor1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/marginTextTopTile"
        app:layout_constraintBottom_toTopOf="@+id/BtnModPV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vendedored"
        app:layout_constraintEnd_toStartOf="@+id/Vendedor2"
        tools:srcCompat="@tools:sample/avatars"
        android:src="@drawable/ic_logo"/>

    <ImageView
        android:id="@+id/Vendedor2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/BtnModPV"
        app:layout_constraintStart_toEndOf="@+id/Vendedor1"
        app:layout_constraintTop_toBottomOf="@+id/Vendedored"
        app:layout_constraintEnd_toStartOf="@+id/Vendedor3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Vendedor3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/BtnModPV"
        app:layout_constraintStart_toEndOf="@+id/Vendedor2"
        app:layout_constraintTop_toBottomOf="@+id/Vendedored"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/BtnModPV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/MargincardDefaul"/>

</androidx.constraintlayout.widget.ConstraintLayout>